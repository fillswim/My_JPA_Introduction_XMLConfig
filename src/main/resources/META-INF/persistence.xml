<!--    <class>com.example.database.P20_OneToOne.C2_BiDirectionalConnection.Student</class>-->

    <properties>

<!--      Удаление и создание таблиц в базе данных каждый раз заново-->
<!--      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->

      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/my_db"/>
      <property name="javax.persistence.jdbc.user" value="bestuser"/>
      <property name="javax.persistence.jdbc.password" value="bestuser"/>

    </properties>

  </persistence-unit>
</persistence>
